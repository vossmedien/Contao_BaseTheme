// Helper function to create safe names with custom prefix
if (!function_exists('createSafeName')) {
    function createSafeName($text, $prefix = '', $fallback = 'item')
    {
        $text = strtolower($text ?? '');
        $text = preg_replace('/ä/', 'ae', $text);
        $text = preg_replace('/ö/', 'oe', $text);
        $text = preg_replace('/ü/', 'ue', $text);
        $text = preg_replace('/ß/', 'ss', $text);
        $text = preg_replace('/[^a-z0-9]+/', '-', $text);
        $text = trim($text, '-');
        return $prefix . ($text ?: $fallback);
    }
}

// Wrapper functions for backwards compatibility
if (!function_exists('createTagClass')) {
    function createTagClass($tag)
    {
        return createSafeName($tag, 'tag-', 'uncategorized');
    }
}

if (!function_exists('createButtonId')) {
    function createButtonId($text)
    {
        return createSafeName($text, 'filter-', 'button');
    }
}

// Helper function to extract last name from full name
if (!function_exists('getLastName')) {
    function getLastName($fullName)
    {
        if (empty($fullName)) {
            return '';
        }
        $nameParts = explode(' ', trim($fullName));
        return end($nameParts); // Get the last part as surname
    }
}

// Helper function to create unique contact IDs based on surnames
if (!function_exists('createContactId')) {
    function createContactId($fullName, $usedNames = [])
    {
        $lastName = getLastName($fullName);
        $baseName = createSafeName($lastName, '', 'partner');
        
        // Check if this name is already used
        $finalName = $baseName;
        $counter = 2;
        while (in_array($finalName, $usedNames)) {
            $finalName = $baseName . '-' . $counter;
            $counter++;
        }
        
        return $finalName;
    }
}

