                    // Clear previous timeout
                    if (searchTimeout) {
                        clearTimeout(searchTimeout);
                    }
                    
                    if (inputValue.length === 0) {
                        // Reset filter when input is empty
                        userInteracted = true;
                        currentZipFilter = null;
                        await applyFilters();
                    } else if (inputValue.length >= 3) {
                        // Search after 500ms delay to avoid too many API calls
                        searchTimeout = setTimeout(async () => {
                            userInteracted = true;
                            await getStateFromAPI(inputValue);
