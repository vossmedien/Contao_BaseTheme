            const areaCheckUrl = <?= json_encode($this->area_check_url ?: '/flaechencheck'); ?>;
            const noSearchResultsText = <?= json_encode($this->zip_no_search_results_text ?: 'Keine Ergebnisse für "[SEARCH]" gefunden.'); ?>;
            const searchErrorText = <?= json_encode($this->zip_search_api_error_text ?: 'Fehler bei der Suche. Bitte versuchen Sie es erneut.'); ?>;

            // PLZ coordinates cache for distance calculation
            const plzCoordinatesCache = {};

            // PLZ Filter functionality
            const zipInput = document.getElementById('zip-filter-input-<?= $this->id; ?>');
            const clearZipBtn = document.getElementById('clear-zip-filter-<?= $this->id; ?>');

            // Live-Filterung bei PLZ/Ort-Eingabe (basierend auf API)
            if (zipInput) {
                let searchTimeout;
                
                zipInput.addEventListener('input', async () => {
                    const inputValue = zipInput.value.trim();
                    
                    // Clear any previous alert
                    const alertContainer = document.getElementById('plzAlertContainer-<?= $this->id; ?>');
