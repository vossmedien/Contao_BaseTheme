                'mecklenburg-vorpommern': 'Mecklenburg-Vorpommern',
                'mecklenburg vorpommern': 'Mecklenburg-Vorpommern',
                'saarland': 'Saarland',
                'sachsen-anhalt': 'Sachsen-Anhalt',
                'sachsen anhalt': 'Sachsen-Anhalt'
            };

            // Get state from input (local states or API)
            async function getStateFromAPI(searchInput) {
                const inputLower = searchInput.toLowerCase().trim();
                const spinnerContainer = document.getElementById('filterSpinnerContainer');
                
                // Show spinner immediately when starting API search
                if (spinnerContainer) {
                    spinnerContainer.style.display = 'flex';
                }
                
                try {
                    // Check if input is a known German state
                    if (germanStates[inputLower]) {
                        currentZipFilter = searchInput;
                        currentZipState = germanStates[inputLower];
                        await applyFilters();
                        return;
                    }
                    
                    let apiUrl;
                    
                    // Check if input is a 5-digit PLZ
                    if (/^\d{5}$/.test(searchInput)) {
                        apiUrl = `https://nominatim.openstreetmap.org/search?format=json&addressdetails=1&country=Germany&postalcode=${searchInput}`;
                    } else {
                        // Search for city/address in Germany (not states)
                        apiUrl = `https://nominatim.openstreetmap.org/search?format=json&addressdetails=1&country=Germany&city=${encodeURIComponent(searchInput)}`;
                    }
                    
                    const response = await fetch(apiUrl);
                    const data = await response.json();
                    
                    if (data && data[0] && data[0].address) {
                        let state = data[0].address.state;
                        
                        // Fallback to city if state is undefined (like in old script)
                        if (typeof state === 'undefined') {
                            state = data[0].address.city;
                        }
                        
                        if (state) {
                            currentZipFilter = searchInput;
                            currentZipState = state;
                            await applyFilters();
                        }
                    } else {
                        // No results found
                        const alertContainer = document.getElementById('plzAlertContainer-<?= $this->id; ?>');
                        if (alertContainer) {
                            alertContainer.innerHTML = `
