                    }
                });
            }

            // Known German states (Bundesländer) for direct matching
            const germanStates = {
                // Offizielle Kürzel
                'by': 'Bayern',
                'sn': 'Sachsen', 
                'th': 'Thüringen',
                'he': 'Hessen',
                'bw': 'Baden-Württemberg',
                'nw': 'Nordrhein-Westfalen',
                'ni': 'Niedersachsen',
                'sh': 'Schleswig-Holstein',
